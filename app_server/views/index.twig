{% extends 'layout.twig' %}

{% block content %}

<div class="container-fluid" id="index" style="margin-top: 70px">
  <div class="row">
    <div class="col-9">
      <div class="w3-content w3-display-container" style="max-width:100%">
        <img class="mySlides" src="images/index-1.jpg" style="width:100%">
        <img class="mySlides" src="images/index-2.jpg" style="width:100%">
        <img class="mySlides" src="images/index-3.jpg" style="width:100%">
        <div class="w3-center w3-container w3-section w3-large w3-text-white w3-display-bottommiddle" style="width:100%;background-color:rgba(0, 0, 0, .7);">
          <div class="w3-left w3-hover-text-khaki" onclick="plusSlides(-1)">&#10094;</div>
          <div class="w3-right w3-hover-text-khaki" onclick="plusSlides(1)">&#10095;</div>
          <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentSlide(1)"></span>
          <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentSlide(2)"></span>
          <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentSlide(3)"></span>
        </div>
      </div>
      <script>
      var slideIndex = 0;
      showSlides();
      var slides,dots;

      function showSlides() {
        var i;
        slides = document.getElementsByClassName("mySlides");
        dots = document.getElementsByClassName("demo");
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }
        slideIndex++;
        if (slideIndex> slides.length) {slideIndex = 1}
        for (i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" w3-white", "");
        }
        slides[slideIndex-1].style.display = "block";
        dots[slideIndex-1].className += " w3-white";
        setTimeout(showSlides, 3000); // Change image every 3 seconds
      }

      function plusSlides(position) {
        slideIndex +=position;
        if (slideIndex> slides.length) {slideIndex = 1}
        else if(slideIndex<1){slideIndex = slides.length}
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" w3-white", "");
        }
          slides[slideIndex-1].style.display = "block";
          dots[slideIndex-1].className += " w3-white";

      }

      function currentSlide(index) {
        if (index> slides.length) {index = 1}
        else if(index<1){index = slides.length}
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" w3-white", "");
        }
          slides[index-1].style.display = "block";
          dots[index-1].className += " w3-white";

      }
      </script>
    </div>
    <div class="col-3">
      <a class="twitter-timeline" data-width="300" data-height="550" data-theme="light" href="https://twitter.com/inforugbyreport?ref_src=twsrc%5Etfw">Tweets by inforugbyreport</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
  </div>
  <hr style="border:4px;">
  <div id="espacioTabla">
    <h4 id="etiquetaUltimaFecha" style="text-align: center"><b>Ãšltima Fecha: Fecha {{fecha}}</b></h4>
    <table class='table' id='tablaIndex'>
      <thead class='thead-dark'>
        <tr>
          <th scope='col'>Partido</th>
          <th scope='col' style='text-align: right'>Local</th>
          <th scope='col'>Visitante</th>
          <th scope='col'>Resultado</th>
          <th scope='col'>Dia</th>
          <th scope='col'>Hora</th>
          <th scope='col'>Estado</th>
        </tr>
      </thead>
      <tbody>
        {% set index = 1 %}
        {% for partido in partidos %}
        <tr>
          <td>{{index}}</td>
          <td style="text-align: right"> {{partido.local.nombre}}<img HEIGHT="30" WIDTH="30" SRC="images/{{partido.local.escudo}}"></td>
          <td><img HEIGHT="30" WIDTH="30" SRC="images/{{partido.visitante.escudo}}">{{partido.visitante.nombre}}</td>
          <td>{{partido.puntosLocal}} - {{partido.puntosVisitante}}</td>
          <td>{{partido.fecha}}</td>
          <td>{{partido.hora}}</td>
          <td>{{partido.estado}}</td>
        </tr>
        {% set index = index+1 %}
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>


{% endblock %}
